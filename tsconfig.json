{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "paths": {
      "@pepr": ["sdk"],
      "@k8s": ["sdk/k8s"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2020"
  },
  "include": ["sdk/**/*.ts", "fixtures/**/*.ts"],
  "watchOptions": {
    "excludeDirectories": ["node_modules", "sdk"]
  }
}
