{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "paths": {
      "@fixtures/*": ["src/fixtures/*"],
      "@pepr": ["src/lib"],
      "@k8s": ["src/lib/k8s"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2020"
  },
  "include": ["src/**/*.ts"],
  "watchOptions": {
    "excludeDirectories": ["node_modules"]
  }
}
